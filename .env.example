# Medium settings
MEDIUM_API_TOKEN=your_medium_api_token
MEDIUM_COOKIES=sid=1:xxxxxxxx.xxxxxxxx; uid=xxxxxxxx; optimizelyEndUserId=xxxxxxxx; __cfruid=xxxxxxxx

# Telegram settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# 管理員Telegram用戶ID，用逗號分隔
ADMIN_USER_IDS=123456789,987654321

# Anthropic settings for summarization
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-7-sonnet-latest  # 最新的 Claude 3.7 Sonnet 模型

# Voyage AI settings for vector embeddings
VOYAGE_API_KEY=your_voyage_api_key
VOYAGE_MODEL=voyage-large-2  # or any other model you prefer

# Database settings
DB_PATH=data/medium_articles.db
VECTOR_DB_PATH=data/vector_db

# Web app settings
WEB_APP_HOST=0.0.0.0
WEB_APP_PORT=8000

# 可公開訪問的URL基礎路徑，用於生成Telegram連結按鈕
# 例如：https://your-domain.com 或 http://your-public-ip:8000
PUBLIC_URL_BASE=

# Number of top articles to fetch daily
TOP_ARTICLES_COUNT=5 